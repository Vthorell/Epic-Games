<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
  </head>
  <body>

    <header>
      <div class="top-bar">
        <img class="logo" src="images/Epic-Games-Symbol.png">
        <h3>STORE</h3>
        <h4>Support</h4>
        <h4>Distribute</h4>
        <i class="bi bi-globe"></i>
        <button class="Sign-in">Sign in</button>
        <button class="Download">Download</button>
      </div>
    </header>
    <h2 class="text-spots">SPOTS</h2>
    <div class="spots">
      <% group1.forEach(image => { %>
        <img src="<%= image.productImage %>" alt="Produktbild">
      <% }); %>
    </div>
        <div class="hero">
          <img class="slides" src="images/Fortnite.png" alt="fortnite">
          <img class="slides" src="images/Rocketleague.png" alt="rocketleague">
          <img class="slides" src="images/fallguys.png" alt="fallguys">

          <button class="prev" onclick="changeSlide(-1)"><i class="bi bi-arrow-left-circle"></i></button>
          <button class="next" onclick="changeSlide(1)"><i class="bi bi-arrow-right-circle"></i></button>
        </div>

      <h2 class="new-games-text">NEW GAMES</h2>
      <div class="newgames">
        <% group2.forEach(image => { %>
          <img src="<%= image.productImage %>" alt="Produktbild">
        <% }); %>
      </div>

      <h2 class="ADS-text">ADS</h2>
      <div class="ADS">
        <% group3.forEach(image => { %>
          <img src="<%= image.productImage %>" alt="Produktbild">
        <% }); %>
      </div>

      <h2 class="SALES-text">SALES</h2>
      <div class="SALES">
        <% group4.forEach(image => { %>
          <img src="<%= image.productImage %>" alt="Produktbild">
        <% }); %>
      </div>

      <h2 class="FREE-GAMES-text">FREE GAMES</h2>
      <div class="FREE-GAMES">
        <% group5.forEach(image => { %>
          <img src="<%= image.productImage %>" alt="Produktbild">
        <% }); %>
      </div>

      <h2 class="trending-games-text">TRENDING GAMES</h2>
      <div class="trending-games">
        <% group6.forEach(image => { %>
          <img src="<%= image.productImage %>" alt="Produktbild">
        <% }); %>
      </div>

      <h2 class="new-release-text">NEW RELEASE</h2>
      <div class="new-release">
        <% group7.forEach(image => { %>
          <img src="<%= image.productImage %>" alt="Produktbild">
        <% }); %>
      </div>

    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <footer>
      <div class="footer-content">
     
        <div class="social-icons">
          <i class="bi bi-facebook"></i>
          <i class="bi bi-twitter"></i>
          <i class="bi bi-youtube"></i>
        </div>
        <h2 class="resources-header">Resources</h2>
        <div class="resources">
          <div class="column">
            <ul>
              <li><a href="#">Support-A-Creator</a></li>
              <li><a href="#">Distribute on Epic Games</a></li>
              <li><a href="#">Careers</a></li>
